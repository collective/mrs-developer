{
  "name": "mrs-developer",
  "version": "2.3.0",
  "description": "manage NPM dependencies as Git repositories",
  "bin": {
    "missdev": "src/command.js"
  },
  "main": "src/index.js",
  "scripts": {
    "test": "./node_modules/mocha/bin/_mocha",
    "test:debug": "node --inspect-brk ./node_modules/mocha/bin/_mocha",
    "dry-release": "release-it --dry-run",
    "release": "release-it",
    "release-major-alpha": "release-it major --preRelease=alpha",
    "release-alpha": "release-it --preRelease=alpha"
  },
  "keywords": [
    "multirepo",
    "git",
    "npm",
    "dependencies"
  ],
  "author": "Eric BREHAULT",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/collective/mrs-developer.git"
  },
  "bugs": {
    "url": "https://github.com/collective/mrs-developer/issues"
  },
  "homepage": "https://github.com/collective/mrs-developer#readme",
  "dependencies": {
    "async": "^3.2.4",
    "chalk": "^2.4.2",
    "simple-git": "^3.3.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-prettier": "^0.0.0-empty",
    "events": "^3.3.0",
    "mocha": "^10.8.2",
    "mock-fs": "^4.13.0",
    "prettier": "^2.8.0",
    "release-it": "^17.1.1"
  }
}
